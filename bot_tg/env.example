# Telegram API credentials
API_ID=your_api_id_here
API_HASH=your_api_hash_here
PHONE_NUMBER=your_phone_number_here

# OpenAI API
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4-turbo-preview

# Bot behavior settings
ENABLE_GROUP_MODE=true
MAX_DAILY_MESSAGES_PER_USER=5
QUIET_HOURS_START=23:00
QUIET_HOURS_END=08:00
GROUP_COOLDOWN_MINUTES=30
MIN_GROUP_MESSAGE_LENGTH=20

# Follow-up settings
FOLLOW_UP_MIN_DAYS=1
FOLLOW_UP_MAX_DAYS=3

# Keywords for group responses
GROUP_KEYWORDS=совет,опыт,как сделать,помогите,вопрос

# Forbidden topics (comma-separated)
FORBIDDEN_TOPICS=политика,nsfw,токсичность,спам,реклама

# Database
DATABASE_PATH=./data/bot.db

# Logging
LOG_LEVEL=INFO

